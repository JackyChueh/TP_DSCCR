@section Styles
{
    <link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />
    <style>
        .hr-month thead th {
            text-align: center;
        }

        .hr-month tbody td .pr{
            height: 100px;
            position: relative;
            cursor: pointer;
        }

        .hr-month .tl {
            position: absolute;
            top: 8px;
            left: 16px;
        }

        .hr-month .br {
            position: absolute;
            bottom: 8px;
            right: 16px;
        }
    </style>
}

